# AstralTube Development Environment Configuration
# Copy this file to .env and fill in your actual values

# Build Configuration
NODE_ENV=development
BUILD_VERSION=3.0.0

# Chrome Web Store API (for automated deployment)
# Get these from: https://developer.chrome.com/docs/webstore/using_webstore_api/
CHROME_CLIENT_ID=your_chrome_client_id
CHROME_CLIENT_SECRET=your_chrome_client_secret  
CHROME_REFRESH_TOKEN=your_chrome_refresh_token
CHROME_EXTENSION_ID=your_extension_id

# Development Server
DEV_SERVER_PORT=3000
DEV_WEBSOCKET_PORT=35729

# Security Scanning
SNYK_TOKEN=your_snyk_token

# GitHub Configuration (for releases)
GITHUB_TOKEN=your_github_token

# Analytics & Monitoring (optional)
SENTRY_DSN=your_sentry_dsn
ANALYTICS_ID=your_analytics_id

# API Keys (if needed for extension features)
YOUTUBE_API_KEY=your_youtube_api_key
GOOGLE_CLIENT_ID=your_google_oauth_client_id

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_ERROR_REPORTING=true
ENABLE_DEBUG_MODE=false