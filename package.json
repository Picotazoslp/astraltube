{
  "name": "astraltube",
  "version": "3.0.0",
  "description": "AstralTube - Ultimate YouTube Manager. Combine playlist management and subscription organization with advanced tools and AI-powered features.",
  "main": "src/background/service-worker.js",
  "type": "module",
  "scripts": {
    "setup": "node setup-dev.js",
    "build": "cross-env NODE_ENV=production rollup -c",
    "build:dev": "cross-env NODE_ENV=development rollup -c",
    "build:watch": "cross-env NODE_ENV=development rollup -c --watch",
    "dev": "concurrently \"npm run build:watch\" \"npm run serve\"",
    "serve": "node dev-server.js",
    "serve:rollup": "cross-env NODE_ENV=development rollup -c --serve",
    "test": "jest --config=jest.config.cjs",
    "test:watch": "jest --config=jest.config.cjs --watch",
    "test:coverage": "jest --config=jest.config.cjs --coverage",
    "test:ci": "jest --config=jest.config.cjs --ci --coverage --watchAll=false",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src/ --ext .js,.jsx,.ts,.tsx --fix",
    "lint:ci": "eslint src/ --ext .js,.jsx,.ts,.tsx --format json --output-file reports/eslint-report.json",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,css,html,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,css,html,json,md}\"",
    "typecheck": "tsc --noEmit",
    "validate": "npm run lint && npm run typecheck && npm run test:ci && npm run build",
    "validate:quick": "npm run lint && npm run test",
    "validate:package": "node -e \"JSON.parse(require('fs').readFileSync('package.json'))\"",
    "validate:manifest": "node -e \"JSON.parse(require('fs').readFileSync('manifest.json'))\"",
    "package": "npm run build && node package.js",
    "package:dev": "npm run build:dev && node package.js --dev",
    "clean": "rimraf dist/ packages/ coverage/ .nyc_output/ reports/",
    "clean:cache": "npm run clean && rimraf node_modules/.cache/",
    "docs": "jsdoc -c jsdoc.config.json",
    "docs:serve": "npm run docs && http-server ./docs -p 8080",
    "analyze": "npm run build && node analyze-bundle.js",
    "analyze:dev": "npm run build:dev && node analyze-bundle.js",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "security:check": "better-npm-audit audit",
    "deps:check": "npm outdated",
    "deps:update": "npm update",
    "deps:update:major": "npx npm-check-updates -u",
    "release:patch": "node release.js patch",
    "release:minor": "node release.js minor",
    "release:major": "node release.js major",
    "release:dry": "node release.js --dry-run",
    "hooks:install": "husky install",
    "hooks:uninstall": "husky uninstall",
    "debug:extension": "chrome-debug-extension dist/",
    "zip": "npm run package",
    "start": "npm run dev",
    "security": "node security-scan.js",
    "release": "node release.js",
    "postinstall": "npm run hooks:install"
  },
  "keywords": [
    "youtube",
    "playlist",
    "subscription",
    "manager",
    "chrome-extension",
    "browser-extension",
    "video",
    "organization",
    "productivity"
  ],
  "author": "AstralTube Team",
  "license": "MIT",
  "homepage": "https://astraltube.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/astraltube/extension.git"
  },
  "bugs": {
    "url": "https://github.com/astraltube/extension/issues"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.18.6",
    "@babel/plugin-proposal-optional-chaining": "^7.21.0",
    "@babel/plugin-transform-nullish-coalescing-operator": "^7.27.1",
    "@babel/plugin-transform-optional-chaining": "^7.27.1",
    "@babel/preset-env": "^7.23.0",
    "@eslint/js": "^9.0.0",
    "@rollup/plugin-babel": "^6.0.0",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-terser": "^0.4.0",
    "@types/chrome": "^0.0.268",
    "@types/jest": "^29.5.0",
    "archiver": "^6.0.0",
    "autoprefixer": "^10.4.0",
    "babel-jest": "^29.7.0",
    "better-npm-audit": "^3.7.0",
    "chokidar": "^3.5.0",
    "compression": "^1.7.0",
    "concurrently": "^8.2.0",
    "core-js": "^3.32.0",
    "cors": "^2.8.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.0.1",
    "express": "^4.18.0",
    "http-proxy-middleware": "^2.0.0",
    "http-server": "^14.1.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdoc": "^4.0.0",
    "lint-staged": "^16.1.6",
    "node-fetch": "^3.3.0",
    "npm-check-updates": "^16.14.0",
    "postcss-nested": "^7.0.2",
    "prettier": "^3.0.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.0.0",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-postcss": "^4.0.0",
    "rollup-plugin-serve": "^1.1.0",
    "ws": "^8.14.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": [
    "Chrome >= 88"
  ],
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "env": {
      "browser": true,
      "es2022": true,
      "webextensions": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "globals": {
      "chrome": "readonly"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/astraltube"
  }
}
